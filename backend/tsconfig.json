{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
   "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "tests"],       
  "exclude": ["node_modules"]
}
